{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit form-horizontal' } }) }}
    {{ form_errors(form) }}

    <div class="form-group">
        <label class="control-label col-sm-3"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></label>
        <div class="col-sm-9">
            <p class="form-control-static">{{ user.username }}</p>
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.email, 'form.email', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.email) }}
        <div class="col-sm-9">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.tel, 'form.tel', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.tel) }}
        <div class="col-sm-9">
            {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.website, 'form.website', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.website) }}
        <div class="col-sm-9">
            {{ form_widget(form.website, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.adresse, 'form.adresse', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.adresse) }}
        <div class="col-sm-9">
            {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.current_password, 'form.current_password', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.current_password) }}
        <div class="col-sm-9">
            {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-sm-3 col-sm-offset-3">
            <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-success"/>
        </div>
    </div>

{{ form_end(form) }}